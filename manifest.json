{
	"manifest_version":2,
	"name":"__MSG_extensionName__",
	"version":"3.0",
	"default_locale": "en",
	"description":"__MSG_extensionDescription__",
	"background":{
		"scripts":[
			"js/jquery-2.1.1.min.js",
			"js/preferences.js",
			"background.js"
		],
		"persistent":true
	},
	"icons":{
		"64":"img/icon64.png"
	},
	"web_accessible_resources": [
		"img/*.png"
	],
	"content_scripts":[
		{
		  "matches": [
				"https://*/*",
				"http://*/*",
		  	"https://mail.google.com/*",
				"https://mail.aol.de/*",
				"https://mg.mail.yahoo.com/*",
				"https://bap.navigator.web.de/*",
				"https://email.t-online.de/*",
				"https://email.freenet.de/*",
				"https://email.vodafone.de/*",
				"https://webmail.ewe.de/*",
				"https://webmail.unity-mail.de/*",
				"https://outlook.live.com/*",
		  	"https://navigator.gmx.net/*"
		  ],
		  "permissions":[
				"webRequest",
				"webRequestBlocking",
		  	"http://*/*",
		  	"https://*/*",
				"storage"
		  ],
		  "css": [
		  	"css/jquery.qtip.min.css",
				"css/tooltip.css"
		  ],
		  "js": [
		  	"js/jquery-2.1.1.min.js",
		  	"js/jquery.qtip.min.js",
		  	"js/contentscript.js",
		  	"js/timer.js",
				"js/tooltip.js",
		  	"js/status.js",
		  	"js/redirect.js",
		  	"js/storage.js"
		  ],
		  "run_at": "document_idle"
		}
	]
}
