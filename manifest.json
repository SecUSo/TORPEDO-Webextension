{
	"applications": {
  	"gecko": {
    	"id": "torpedo-browser@tu-darmstadt.de",
		"update_url": "https://addons.secuso.org/updates.json"
  	}
	},
	"manifest_version":2,
	"author":"Betty Ballin",
	"name":"__MSG_extensionName__",
	"version":"1.0",
	"default_locale": "de",
	"description":"__MSG_extensionDescription__",
	"background":{
		"scripts":[
			"js/jquery-2.1.1.min.js",
			"js/punycode.min.js",
			"js/publicsuffixlist.min.js",
			"background.js"
		]
	},
	"permissions":[
		"<all_urls>",
		"tabs",
		"storage"
	],
	"page_action": {
		"browser_style": true,
	  "default_title": "__MSG_extensionName__",
		"default_popup": "icon.html"
  },
	"options_ui":{
		"page": "options.html",
		"browser_style": true
	},
	"icons":{
		"38":"img/icon38.png",
		"64":"img/icon64.png"
	},
	"web_accessible_resources": [
		"img/*.png"
	],
	"content_scripts":[
		{
		  "matches": [
		  	"https://mail.google.com/*",
				"https://mail.yahoo.com/*",
				"https://email.t-online.de/*",
				"https://outlook.live.com/*",
				"https://mail.aol.com/*",
				"https://bap.navigator.web.de/*",
				"https://navigator.gmx.net/*"
		  ],
		  "css": [
		  	"css/jquery.qtip.min.css",
				"css/tooltip.css"
		  ],
		  "js": [
		  	"js/jquery-2.1.1.min.js",
		  	"js/jquery.qtip.min.js",
		  	"js/publicsuffixlist.min.js",
		  	"js/punycode.min.js",
		  	"js/contentscript.js",
		  	"js/timer.js",
				"js/tooltip.js",
		  	"js/status.js",
		  	"js/redirect.js"
		  ],
		  "run_at": "document_idle",
			"all_frames": true
		}
	]
}
